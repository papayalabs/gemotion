<div id="video_start" class="">
  <div class="flex justify-center">
    <h1 class="video-h1">
      <%= t('videos.start.title') %>
    </h1>
  </div>

  <div class="flex flex-row justify-center w-full">
    <%= image_tag 'left-no-star.png', class: 'image-sides left-image' %>

    <div class="content flex flex-col justify-center items-center">

      <div class="text-with-image-block-start flex flex-col justify-center items-center mb-[72px] w-full p-text-16">
        <p class="p-text-16"><%= t('videos.start.video_choices') %></p>
        <ul class="flex flex-col justify-center items-center">
          <li class="p-text-16"><%= t('videos.start.collaborative_description') %></li>
          <li class="p-text-16"><%= t('videos.start.solo_description') %></li>
        </ul>
        <%= image_tag 'icons/target.png', class: 'image-from-image-text-block-start' %>
      </div>




      <div class="start-choices-choose">
        <h3 class="text-black text-center font-montserrat text-[32px] font-bold leading-[37px] mb-[40px]"><%= t('videos.start.i_choose') %></h3>

        <%= form_with url: start_post_path, method: :post do |f| %>
          <div class="flex space-x-4 max-w-[1006px] gap-[32px] mx-auto mb-45">
            <div class="flex items-center space-x-2 w-full">
              <%= f.radio_button :video_type, "colab", id: "video_type_colab", class: "hidden", checked: @video.nil? ? false : @video.colab?  %>
              <%= f.label :video_type_colab, t('videos.start.collaborative_option'), class: "custom-radio-label w-full text-center h-56" %>
            </div>
            <div class="flex items-center space-x-2 w-full">
              <%= f.radio_button :video_type, "solo", id: "video_type_solo", class: "hidden", checked: @video.nil? ? false : @video.solo? %>
              <%= f.label :video_type_solo, t('videos.start.solo_option'), class: "custom-radio-label w-full text-center h-56" %>
            </div>
          </div>
          <div class="flex justify-center mt-8">
            <%= f.submit t('next_step'), class:"black-link" %>
          </div>
        <% end %>
      </div>
    </div>

    <%= image_tag 'right-with-star.png', class: 'image-sides right-image' %>
  </div>
</div>

<style>
.image-sides {
  width: 15%; /* Allocate 15% to the images */
  object-fit: cover; /* Ensure the images fill the allocated space properly */
}

.content {
  width: 70%; /* Allocate 70% to the content block */
  padding-bottom: 150px;
}

.left-image {
  margin-right: 2.5%; /* Optional: Space between the left image and content */
}

.right-image {
  margin-left: 2.5%; /* Optional: Space between the content and right image */
}
.custom-radio-label {
  position: relative;
  display: flex;
  padding: 0 104px;
  justify-content: center;
  align-items: center;
  font-family: Montserrat;
  font-size: 20px;
  font-weight: 500;
  line-height: 24px;
  text-align: center;
  color: var(--Black, rgba(32, 31, 31, 1));

  gap: 10px;
  border-radius: 20px;
  background: var(--White, #FFF);
  text-align: center;
  width: 100%;
  height: 224px;
  z-index: 1;
  transition: background-color 0.3s, color 0.3s, border-color 0.3s; /* Add smooth transition */
}

.custom-radio-label::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 20px;
  background: linear-gradient(205.68deg, rgba(201, 225, 255, 0.2) 19.49%, rgba(13, 103, 131, 0.2) 60.63%, rgba(22, 63, 80, 0.2) 90.92%);
  z-index: -1;
  padding: 2px;
}

.custom-radio-label::after {
  content: "";
  position: absolute;
  top: 2px;
  left: 2px;
  right: 2px;
  bottom: 2px;
  border-radius: 18px;
  background: #fff;
  z-index: -1;
}

/* Styles when radio button is checked */
input[type="radio"]:checked + .custom-radio-label {
  background-color: #0D6783; /* Background color for the checked state */
  color: #0D6783;
}

input[type="radio"]:checked + .custom-radio-label::before {
  background: linear-gradient(205.68deg, rgba(13, 103, 131, 0.5) 19.49%, rgba(13, 103, 131, 0.5) 60.63%, rgba(22, 63, 80, 0.5) 90.92%); /* Adjusted gradient for checked state */
}


.text-with-image-block-start p {
  color: #000;
  text-align: center;
  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 25px; /* 156.25% */
}

.text-with-image-block-start ul {
  color: #000;
  text-align: center;

  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 25px; /* 156.25% */
  list-style-type: disc;
}

.text-with-image-block-start {
  width: 1062px;
  height: 173px; /* Ensure content pushes beyond this */
  border-radius: 10px;
  border: 1px solid var(--linear-2-transparent-20, #C9E1FF);
  background: var(--White, #FFF);
  box-shadow: 4px 4px 20px 5px rgba(13, 103, 131, 0.10);
  position: relative;
  box-sizing: border-box; /* Ensures padding/borders are included in dimensions */
  padding: 49px 120px;
  text-align: center;
}

.image-from-image-text-block-start{
  position: absolute;
  top: -55px;
  width: 110px;
  height: 110px;
  left: 50%;
  transform: translateX(-50%);
}
</style>

